<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Food Index</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 flex flex-col items-center p-6">
        <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-2xl font-bold text-center mb-6">Food List</h1>
            <table class="w-full border-collapse border border-gray-300">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="p-2 border">Name</th>
                        <th class="p-2 border">Calories</th>
                        <th class="p-2 border">Protein</th>
                        <th class="p-2 border">Fat</th>
                        <th class="p-2 border">Carbs</th>
                        <th class="p-2 border">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% consumables.forEach(consumable => { %>
                    <tr class="border">
                        <td class="p-2 border"><%= consumable.name %></td>
                        <td class="p-2 border">
                            <%= consumable.calories %> kcal
                        </td>
                        <td class="p-2 border">
                            <%= consumable.protein || 0 %> g
                        </td>
                        <td class="p-2 border"><%= consumable.fat || 0 %> g</td>
                        <td class="p-2 border">
                            <%= consumable.carbohydrate || 0 %> g
                        </td>
                        <td class="p-2 border flex space-x-2 justify-center">
                            <form
                                action="/user/consumables/add/<%= consumable.id %>"
                                method="POST"
                                class="inline"
                            >
                                <button
                                    type="submit"
                                    class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600"
                                >
                                    Add
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
