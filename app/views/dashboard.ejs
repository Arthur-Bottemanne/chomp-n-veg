<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dashboard</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 flex flex-col items-center p-6">
        <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-2xl font-bold text-center mb-6">
                Food Eaten Today
            </h1>
            <table class="w-full border-collapse border border-gray-300">
                <thead class="text-center">
                    <tr class="bg-gray-200">
                        <th class="p-2 border">Name</th>
                        <th class="p-2 border">Quantity</th>
                        <th class="p-2 border">Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% consumables.forEach(consumable => { %>
                    <tr class="text-center">
                        <td class="p-2 border"><%= consumable.name %></td>
                        <td class="p-2 border"><%= consumable.quantity %></td>
                        <td class="p-2 border"><%= consumable.time %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <a
            href="/user/consumables/add"
            class="mt-6 bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-400 focus:outline-none"
        >
            Add Food Eaten Today
        </a>
    </body>
</html>
